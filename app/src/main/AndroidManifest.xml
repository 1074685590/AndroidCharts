<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.administrator.androidcharts">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.BarChartActivity">
        </activity>
        <activity android:name=".activity.CurveChartActivity">
        </activity>
        <activity android:name=".activity.LineChartActivity">
        </activity>
        <activity android:name=".activity.KChartActivity">
        </activity>
        <activity android:name=".activity.PieChartActivity">
        </activity>
    </application>

</manifest>